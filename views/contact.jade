extends layout
block content
  .container
    form(method='post', action='contact/send')
      h1 contact
      .form-group
        label Name
        input.form-control(type='text', name='name', placeholder='Enter a name')
      .form-group
        label Email
        input.form-control(type='email', name='email', placeholder='Enter a name')
        .form-group
          label Message
          textarea.form-control(name='message')
        button.btn.btn-default(type='submit') Submit
